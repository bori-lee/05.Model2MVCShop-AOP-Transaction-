	   	<!-- SQL : UPDATE -->
	<update id="updateTranCode" parameterType="purchase">
		UPDATE transaction
		<set>
			<choose>
				<when test="tranCode == 1">
					tran_status_code = 2
				</when>
				<when test="tranCode == 2">
					tran_status_code = 3
				</when>
			</choose>
		</set>
		<where>
			 prod_no = #{purchaseProd.prodNo}
		</where>
		
	</update>
	 

	 	
</mapper>